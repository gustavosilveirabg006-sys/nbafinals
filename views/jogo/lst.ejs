<%-include('../cabecalho.ejs')%>
<section class="section">
  <div style="display:flex; align-items:end; justify-content:space-between; gap:16px; flex-wrap:wrap;">
    <div>
      <h2>Jogos de Basquete(vou fazer depois, o professor disse que podia)</h2>
      <p>Gerencie sua coleção de jogos</p>
    </div>
    <div class="actions">
      <a href="/jogo/add" class="btn primary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 5a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H6a1 1 0 110-2h5V6a1 1 0 011-1z"/></svg>
        Adicionar Jogo
      </a>
    </div>
  </div>

  <div class="table-wrap" style="margin-top:14px;">
    <table>
      <thead>
        <tr>
          <th>Time da Casa</th>
          <th>Pontos da Casa </th>
          <th>Pontos do Visitante</th>
          <th>Time Visitante</th>
          <th>Data</th>
          <th>Arena</th>
          <th class="actions-cell">Ações</th>
        </tr>
      </thead>
      <tbody>
          <% 
          // aceita tanto `jogos` quanto `Jogos` vindos do controller
          const lista = (typeof jogos !== 'undefined' && jogos) ? jogos : ((typeof Jogos !== 'undefined' && Jogos) ? Jogos : []);
          lista.forEach(jogo => { 
        %>
          <tr>
            <td><%= jogo.timeCasa %></td>
            <td><%= jogo.pontosCasa %></td>
            <td><%= jogo.pontosVisitante %></td>
            <td><%= jogo.timeVisitante %></td>
            <td><%= jogo.data %></td>
            <td><%= jogo.arena %></td>
            <td class="actions-cell">
              <button class="icon-btn" title="Editar" aria-label="Editar">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 20h9"/>
                  <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z"/>
                </svg>
              </button>
              <button class="icon-btn" title="Excluir" aria-label="Excluir">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"/>
                  <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6"/>
                  <path d="M10 11v6"/>
                  <path d="M14 11v6"/>
                  <path d="M9 6V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2"/>
                </svg>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>

<%-include('../rodape.ejs')%>
