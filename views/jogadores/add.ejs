<%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Novo Jogador</h3>
      </header>
      <div class="content">
        <form id="form-jogador" 
        enctype="multipart/form-data"
        autocomplete="off" action="/jogadores/add/ok" method="POST">
          <div class="grid">
            <div>
              <label for="foto">Foto do Jogador</label>
              <input id="foto" name="foto" type="file" >
            </div>
            <div>
              <label for="nome">Nome do Jogador</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: LeBron James" required>
            </div>
            <div>
              <label for="posicao">Posição</label>
              <select id="posicao" name="posicao" required>
                <option value="" disabled selected>Selecione a posição</option>
                <option>PG</option>
                <option>SG</option>
                <option>SF</option>
                <option>PF</option>
                <option>C</option>
              </select>
            </div>
            <div>
              <label for="time">Time</label>
              <input id="time" name="time" type="text" placeholder="Ex: Lakers" required>
            </div>
            <div>
              <label for="pontos">Média de Pontos</label>
              <input id="pontos" name="pontos" type="number" placeholder="Ex: 25.5" min="0" step="0.01" required>
            </div>
            <div>
              <label for="assistencias">Média de Assistências</label>
              <input id="assistencias" name="assistencias" type="number" placeholder="Ex: 7.8" min="0" step="0.01" required>
            </div>
            <div>
              <label for="rebotes">Média de Rebotes</label>
              <input id="rebotes" name="rebotes" type="number" placeholder="Ex: 10.2" min="0" step="0.01" required>
            </div>
          </div> <!-- fecha .grid -->
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/jogadores/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Jogador</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>