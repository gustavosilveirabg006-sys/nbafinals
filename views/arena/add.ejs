     <%-include('../cabecalho.ejs')%>
     <header>
        <h3>Adicionar Nova Arena</h3>
      </header>
      <div class="content">
        <form id="form-arena" method="post" enctype="multipart/form-data" autocomplete="off" action="/arena/add/ok">
          <div class="grid">
            <div>
              <label for="foto">Foto da Arena</label>
              <input id="foto" name="foto" type="file" required>
            </div>
            <div>
              <label for="nome">Nome da Arena</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: Staples Center" required>
            </div>
            <div>
              <label for="cidade">Cidade da Arena</label>
              <input id="cidade" name="cidade" type="text" placeholder="Ex: Los Angeles" required>
            </div>
            <div>
              <label for="capacidade">Capacidade</label>
              <input id="capacidade" name="capacidade" type="number" placeholder="Ex: 20000" min="0" step="1" required>
            </div>
            <div>
              <label for="anoInauguracao">Ano de Inauguração</label>
              <input id="anoInauguracao" name="anoInauguracao" type="number" placeholder="Ex: 1999" min="1900" max="2100" step="1" required>
            </div>
          </div>
          <label for="timeDaCasa">Nome do Time da Casa</label>
              <input id="timeDaCasa" name="timeDaCasa" type="text" placeholder="Ex: Los Angeles Lakers" required>
          </div>
            <div class="field-help">Os campos com * são obrigatórios.</div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/arena/lst">Cancelar</a>
            <button type="submit" class="btn primary">Adicionar Arena</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>