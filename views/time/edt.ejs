<%-include('../cabecalho.ejs')%>
     <header>
        <h3>Editar Time</h3>
      </header>
      <div class="content">
        <form id="form-time" action="/time/edt/<%= time.id %>" autocomplete="off" method="POST" enctype="multipart/form-data">
          <div class="grid">
            <div>
              <label for="id">ID do Time</label>
              <input id="id" name="id" type="text" value="<%=time.id%>" readonly required>
            </div>
            <div>
              <label for="nome">Nome do Time</label>
              <input id="nome" name="nome" type="text" placeholder="Ex: Los Angeles Lakers" value="<%=time.nome%>" required>
            </div>
            <div>
              <label for="vitorias">Vitórias</label>
              <input id="vitorias" name="vitorias" type="number" placeholder="Ex: 45" min="0" step="1" value="<%=time.vitorias%>" required>
            </div>
            <div>
              <label for="derrotas">Derrotas</label>
              <input id="derrotas" name="derrotas" type="number" placeholder="Ex: 37" min="0" step="1" value="<%=time.derrotas%>" required>
            </div>
            <div>
              <label for="jogadores">Número de Jogadores</label>
              <input id="jogadores" name="jogadores" type="text" placeholder="Ex: 15" value="<%=time.jogadores%>" required>
            </div>
            <div>
              <label for="titulos">Títulos</label>
              <input id="titulos" name="titulos" type="number" placeholder="Ex: 17" min="0" step="1" value="<%=time.titulos%>" required>
            </div>
            <div>
              <label for="winRate">Win Rate (%)</label>
              <input id="winRate" name="winRate" type="number" placeholder="Ex: 54.88" min="0" max="100" step="0.01" value="<%=time.winRate%>" required>
            </div>
            <div>
              <label for="foto">Foto do Time</label>
              <% if(time.foto) { %>
                <div style="margin-bottom: 10px;">
                  <img src="<%=time.foto%>" alt="Foto atual" style="max-width: 150px; max-height: 150px; border-radius: 8px;">
                </div>
              <% } %>
              <input id="foto" name="foto" type="file" accept="image/*">
            </div>
          </div>
          <footer>
            <a type="button" class="btn ghost" id="btn-cancelar" href="/time/lst">Cancelar</a>
            <button type="submit" class="btn primary">Salvar</button>
          </footer>
        </form>
      </div>

      <%-include('../rodape.ejs')%>